<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="250dp"
                    android:id="@+id/placeImageView"
                    android:contentDescription="place image"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/torre_del_reloj" />

                <TextView
                    android:text="Cartagena de Indias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:id="@+id/placeName"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:background="@color/black_overlay"
                    android:textColor="@color/cardview_light_background" />

            </FrameLayout>

            <TextView
                android:text="@string/example_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:maxLines="3"
                android:id="@+id/placeDescription"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Escuchar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:id="@+id/verMasBtn"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black_overlay"
                    android:onClick="listenAction"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:text="ir al mapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/irBtn"
                    android:onClick="goMapAction"
                    android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                    android:backgroundTint="@color/black"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>